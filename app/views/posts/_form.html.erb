<%= render 'shared/form_error', form: @post %>

<div class='well'>
  <%= form_for @post do |f| %>
    <div class='control-group'>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class='control-group'>
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class='control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <br>
    <div class='control-group'>
      <%=  collection_check_boxes(:post, :category_ids, @categories, :id, :name) do |b|
            b.label(class: "checkbox inline") { b.check_box + b.text} 
            end %>
    </div>
    <%= submit_tag btn_txt, class: 'btn btn-primary' %>
  <% end %>
</div>