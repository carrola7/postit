<% show_post ||= false %>

<div class='row'>
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <br/>
    <% end %>
     <span id='comment_<%= comment.id %>_votes'><%= "#{comment.total_votes}" %></span> <%= "vote#{comment.total_votes == 1 ? '' : 's'}" %>
    <br/>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end%>
  </div>
  <div class='span8 well'>
    <span class="quiet">posted by</span> <%= link_to comment.creator.username, user_path(comment.creator) %>
    <% if show_post %>
      <span>on  <%= link_to "#{comment.post.title}", post_path(comment.post) %></span>
    <% end %>
    <small><%= format_date comment.created_at %></small>
      <p><%= comment.body %></p>
  </div>
</div>